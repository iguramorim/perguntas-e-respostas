<%- include('partials/head.ejs') %>

  <body>
    <%- include('partials/header.ejs') %>
      <main class="mt-20">
        <section class="max-w-screen-lg mx-auto p-5">
          <div class="space-y-5">
            <% perguntas.forEach(pergunta=> { %>
              <div class="rounded border border-zinc-200 shadow p-3 flex flex-col justify-between">
                <h1 class="text-xl font-bold">
                  <%= pergunta.titulo %>
                </h1>
                <p class="text-zinc-400 text-xs"><%= pergunta.createdAt.toLocaleString("pt-BR", { timeZone: "America/Sao_Paulo" }) %></p>

                <a href="/pergunta/<%= pergunta.id %>"
                  class="mt-3 bg-blue-600 hover:bg-blue-500 active:scale-96 text-white transition-all cursor-pointer px-5 py-2 rounded mr-auto">Responder</a>
              </div>
              <% }) %>
          </div>
        </section>
      </main>
  </body>