<%- include('partials/head.ejs') %>

<style>
  body {
    font-family: "Montserrat", serif;
  }
</style>

<body class="bg-zinc-100">
  <%- include('partials/header.ejs') %>
  <main class="mt-20">
    <section class="max-w-screen-lg mx-auto p-5">
      <h1 class="text-2xl font-bold">Realizar pergunta</h1>
      <form method="POST" action="/salvarpergunta" class="space-y-4 mt-6 bg-white p-5 rounded border-zinc-400 shadow">
        <div>
          <label for="title" class="cursor-pointer">Título</label>
          <input type="text" id="title" name="titulo" required class="w-full border border-zinc-400 rounded outline-blue-600 p-2">
        </div>

        <div>
          <label for="description" class="cursor-pointer">Descrição</label>
          <textarea id="description" name="descricao" required class="w-full border border-zinc-400 rounded outline-blue-600 p-2"></textarea>
        </div>

        <button class="bg-blue-600 hover:bg-blue-500 active:scale-95 transition-all text-white p-3 cursor-pointer rounded">Fazer
          pergunta</button>
      </form>
    </section>
  </main>
</body>